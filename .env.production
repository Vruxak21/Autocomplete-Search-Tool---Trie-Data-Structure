# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://${MONGO_ROOT_USERNAME:-admin}:${MONGO_ROOT_PASSWORD}@mongodb:27017/autocomplete-search?authSource=admin
MONGODB_DB_NAME=autocomplete-search

# Application Configuration
MAX_SUGGESTIONS=5
SEARCH_TIMEOUT_MS=100
TRIE_BACKUP_INTERVAL_MS=300000

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL:-https://your-domain.com}

# Cache Configuration
CACHE_MAX_SIZE=10000
CACHE_TTL=600000

# Performance Configuration
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=10mb

# Security Configuration
CORS_ORIGIN=${CORS_ORIGIN:-https://your-domain.com}
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=combined

# Production Security
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
TRUST_PROXY=true

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Database Security
MONGO_ROOT_USERNAME=${MONGO_ROOT_USERNAME:-admin}
MONGO_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD}

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true