{
  "name": "autocomplete-search-backend",
  "version": "1.0.0",
  "description": "Backend API for autocomplete search tool with Trie data structure",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "bootstrap": "node scripts/bootstrap.js",
    "seed": "node scripts/seed.js",
    "seed:force": "node scripts/seed.js --force",
    "seed:sample": "node scripts/seed.js --datasets sample",
    "seed:reset": "node scripts/seed.js --reset --datasets mixed",
    "seed:cleanup": "node scripts/seed.js --cleanup --datasets sample",
    "seed:cities": "node scripts/seed.js --datasets cities",
    "seed:products": "node scripts/seed.js --datasets products",
    "seed:movies": "node scripts/seed.js --datasets movies",
    "seed:mixed": "node scripts/seed.js --datasets mixed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:startup": "jest tests/integration/startup.test.js",
    "lint": "eslint src/**/*.js scripts/**/*.js",
    "lint:fix": "eslint src/**/*.js scripts/**/*.js --fix",
    "format": "prettier --write src/**/*.js scripts/**/*.js",
    "build": "echo 'No build step required for Node.js'",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "validate": "node -e \"require('./src/config/environment').config.load(); console.log('Configuration valid')\""
  },
  "keywords": [
    "autocomplete",
    "trie",
    "search",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
