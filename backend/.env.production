# Production Environment Configuration for Render
NODE_ENV=production
PORT=10000

# Database Configuration (replace with your MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://admin:YOUR_PASSWORD@autocomplete-cluster.xxxxx.mongodb.net/autocomplete_search?retryWrites=true&w=majority
MONGODB_DB_NAME=autocomplete_search

# CORS Configuration (will be updated with your frontend URL)
CORS_ORIGIN=*
FRONTEND_URL=https://your-app.netlify.app

# Performance Configuration
CACHE_MAX_SIZE=5000
CACHE_TTL=300000
MAX_REQUEST_SIZE=10mb

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Host Configuration
HOST=0.0.0.0