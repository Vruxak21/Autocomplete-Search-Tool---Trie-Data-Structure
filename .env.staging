# Staging Environment Configuration
NODE_ENV=staging

# Server Configuration
PORT=3001
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://${MONGO_ROOT_USERNAME:-admin}:${MONGO_ROOT_PASSWORD}@mongodb:27017/autocomplete-search-staging?authSource=admin
MONGODB_DB_NAME=autocomplete-search-staging

# Application Configuration
MAX_SUGGESTIONS=5
SEARCH_TIMEOUT_MS=100
TRIE_BACKUP_INTERVAL_MS=300000

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL:-https://staging.your-domain.com}

# Cache Configuration
CACHE_MAX_SIZE=5000
CACHE_TTL=300000

# Performance Configuration
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=10mb

# Security Configuration
CORS_ORIGIN=${CORS_ORIGIN:-https://staging.your-domain.com}
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Staging Security
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=false
TRUST_PROXY=true

# Database Security
MONGO_ROOT_USERNAME=${MONGO_ROOT_USERNAME:-admin}
MONGO_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD}

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_DEBUG_ENDPOINTS=true